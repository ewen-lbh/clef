{% extends 'base.pug' %}
{% load i18n static %}
{% block title %} {{page_title}} {% endblock title %}
{% block content %}

img.logo(src="{% static 'pages/images/logo-dark.png' %}", alt="Clef")
form.searchbar(action="/search", method="get")
    input(
        name='q'
        type="text" 
        onfocus="$('img.logo').attr('src','{% static 'pages/images/logo-color.png' %}')"
        onblur="$('img.logo').attr('src','{% static 'pages/images/logo-dark.png' %}')")

    
{% endblock content %}